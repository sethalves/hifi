{
    "name": "Standard to Action",
    "channels": [
        { "from": "Standard.LY", "when": "Application.PhysicsEnabled",  "to": "Actions.TranslateZ" },

        { "from": "Standard.LX",
          "when": [
            "Application.InHMD", "!Application.AdvancedMovement",
            "Application.SnapTurn", "!Standard.RX", "Application.PhysicsEnabled"
          ],
          "to": "Actions.StepYaw",
          "filters":
            [
                { "type": "deadZone", "min": 0.15 },
                "constrainToInteger",
                { "type": "pulse", "interval": 0.25 },
                { "type": "scale", "scale": 22.5 }
            ]
        },
        { "from": "Standard.LX", "to": "Actions.TranslateX",
          "when": [ "Application.AdvancedMovement", "Application.PhysicsEnabled" ]
        },
        { "from": "Standard.LX", "to": "Actions.Yaw",
          "when": [ "!Application.AdvancedMovement", "!Application.SnapTurn", "Application.PhysicsEnabled" ]
        },

        { "from": "Standard.RX",
          "when": [ "Application.SnapTurn", "Application.PhysicsEnabled" ],
          "to": "Actions.StepYaw",
          "filters":
            [
                { "type": "deadZone", "min": 0.15 },
                "constrainToInteger",
                { "type": "pulse", "interval": 0.25 },
                { "type": "scale", "scale": 22.5 }
            ]
        },
        { "from": "Standard.RX", "to": "Actions.Yaw",
          "when": [ "!Application.SnapTurn", "Application.PhysicsEnabled" ]
        },

        { "from": "Standard.RY",
          "when": [ "Application.Grounded", "Application.PhysicsEnabled" ],
          "to": "Actions.Up",
          "filters":
            [
                { "type": "deadZone", "min": 0.6 },
                "invert"
            ]
        },

        { "from": "Standard.RY", "when": "Application.PhysicsEnabled", "to": "Actions.Up", "filters": "invert"},

        { "from": "Standard.Back", "when": "Application.PhysicsEnabled", "to": "Actions.CycleCamera" },
        { "from": "Standard.Start", "when": "Application.PhysicsEnabled", "to": "Actions.ContextMenu" },

        { "from": "Standard.LT", "to": "Actions.LeftHandClick" },
        { "from": "Standard.RT", "when": "Application.PhysicsEnabled", "to": "Actions.RightHandClick" },

