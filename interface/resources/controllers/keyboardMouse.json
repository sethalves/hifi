{
    "name": "Keyboard/Mouse to Actions",
    "channels": [
        { "from": "Keyboard.A", "when": [ "Keyboard.RightMouseButton", "Application.PhysicsEnabled" ], "to": "Actions.LATERAL_LEFT" },
        { "from": "Keyboard.D", "when": [ "Keyboard.RightMouseButton", "Application.PhysicsEnabled" ], "to": "Actions.LATERAL_RIGHT" },
        { "from": "Keyboard.E", "when": "Application.PhysicsEnabled", "to": "Actions.LATERAL_RIGHT" },
        { "from": "Keyboard.Q", "when": "Application.PhysicsEnabled", "to": "Actions.LATERAL_LEFT" },


        { "comment" : "Mouse turn need to be small continuous increments",
          "from": { "makeAxis" : [
                [ "Keyboard.MouseMoveLeft" ],
                [ "Keyboard.MouseMoveRight" ]
            ]
          },
          "when": [ "Application.InHMD", "Application.SnapTurn", "Keyboard.RightMouseButton", "Application.PhysicsEnabled" ],
          "to": "Actions.StepYaw",
          "filters":
            [
                "constrainToInteger",
                { "type": "pulse", "interval": 0.2 },
                { "type": "scale", "scale": 22.5 }
            ]
        },

        { "comment" : "Touchpad turn need to be small continuous increments, but without the RMB constraint",
          "from": { "makeAxis" : [
                [ "Keyboard.TouchpadLeft" ],
                [ "Keyboard.TouchpadRight" ]
            ]
          },
          "when": [ "Application.InHMD", "Application.SnapTurn", "Application.PhysicsEnabled" ],
          "to": "Actions.StepYaw",
          "filters":
            [
                "constrainToInteger",
                { "type": "pulse", "interval": 0.2 },
                { "type": "scale", "scale": 22.5 }
            ]
        },


        { "from": { "makeAxis" : [
                ["Keyboard.Left" ],
                ["Keyboard.Right"]
            ]
          },
          "when": ["Application.InHMD", "Application.SnapTurn", "!Keyboard.Shift", "Application.PhysicsEnabled"],
          "to": "Actions.StepYaw",
          "filters":
            [
                { "type": "pulse", "interval": 0.5, "resetOnZero": true },
                { "type": "scale", "scale": 22.5 }
            ]
        },

        { "from": { "makeAxis" : [
                ["Keyboard.A"],
                ["Keyboard.D"]
            ]
          },
          "when": [ "Application.InHMD", "Application.SnapTurn", "Application.PhysicsEnabled" ],
          "to": "Actions.StepYaw",
          "filters":
            [
                { "type": "pulse", "interval": 0.5, "resetOnZero": true },
                { "type": "scale", "scale": 22.5 }
            ]
        },

        { "from": { "makeAxis" : [
                ["Keyboard.Left"],
                ["Keyboard.Right"]
             ]
          },
          "when": ["Application.CameraFirstPerson", "!Keyboard.Shift", "Application.PhysicsEnabled"],
          "to": "Actions.Yaw"
        },

        { "from": { "makeAxis" : [
                ["Keyboard.Left"],
                ["Keyboard.Right"]
             ]
          },
          "when": ["Application.CameraThirdPerson", "!Keyboard.Shift", "Application.PhysicsEnabled"],
          "to": "Actions.Yaw"
        },

        { "from": { "makeAxis" : [
                ["Keyboard.A", "Keyboard.TouchpadLeft"],
                ["Keyboard.D", "Keyboard.TouchpadRight"]
            ]
          },
          "when": [ "Application.CameraFirstPerson", "Application.PhysicsEnabled" ],
          "to": "Actions.Yaw"
        },
        { "from": { "makeAxis" : [
                ["Keyboard.A", "Keyboard.TouchpadLeft"],
                ["Keyboard.D", "Keyboard.TouchpadRight"]
            ]
          },
          "when": [ "Application.CameraThirdPerson", "Application.PhysicsEnabled" ],
          "to": "Actions.Yaw"
        },
        { "from": { "makeAxis" : ["Keyboard.MouseMoveLeft", "Keyboard.MouseMoveRight"] },
          "when": [ "Keyboard.RightMouseButton", "Application.PhysicsEnabled" ],
          "to": "Actions.Yaw",
          "filters":
            [
                { "type": "scale", "scale": 0.6 }
            ]
        },

        { "from": "Keyboard.W", "when": ["!Keyboard.Control", "Application.PhysicsEnabled"], "to": "Actions.LONGITUDINAL_FORWARD" },
        { "from": "Keyboard.S", "when": ["!Keyboard.Control", "Application.PhysicsEnabled"], "to": "Actions.LONGITUDINAL_BACKWARD" },
        { "from": "Keyboard.Shift", "when": ["!Keyboard.Left", "!Keyboard.Right", "Application.PhysicsEnabled"], "to": "Actions.SPRINT" },
        { "from": "Keyboard.Control", "when" : "Application.PhysicsEnabled", "to": "Actions.VERTICAL_DOWN" },
        { "from": "Keyboard.Left", "when": ["Keyboard.Shift", "Application.PhysicsEnabled"], "to": "Actions.LATERAL_LEFT" },
        { "from": "Keyboard.Right", "when": ["Keyboard.Shift", "Application.PhysicsEnabled"], "to": "Actions.LATERAL_RIGHT" },
        { "from": "Keyboard.Up", "when": ["Application.CameraFirstPerson", "Application.PhysicsEnabled"], "to": "Actions.LONGITUDINAL_FORWARD" },
        { "from": "Keyboard.Up", "when": ["Application.CameraThirdPerson", "Application.PhysicsEnabled"], "to": "Actions.LONGITUDINAL_FORWARD" },
        { "from": "Keyboard.Down", "when": ["Application.CameraFirstPerson", "Application.PhysicsEnabled"], "to": "Actions.LONGITUDINAL_BACKWARD" },
        { "from": "Keyboard.Down", "when": ["Application.CameraThirdPerson", "Application.PhysicsEnabled"], "to": "Actions.LONGITUDINAL_BACKWARD" },

        { "from": "Keyboard.PgDown", "when": "Application.PhysicsEnabled", "to": "Actions.VERTICAL_DOWN" },
        { "from": "Keyboard.PgUp", "when": "Application.PhysicsEnabled", "to": "Actions.VERTICAL_UP" },

        { "from": "Keyboard.MouseMoveUp", "when": ["Keyboard.RightMouseButton", "Appliction.PhysicsEnabled"], "to": "Actions.PITCH_UP",
          "filters":
            [
                { "type": "scale", "scale": 0.6 }
            ]

        },
        { "from": "Keyboard.MouseMoveDown", "when": ["Keyboard.RightMouseButton", "Application.PhysicsEnabled"] , "to": "Actions.PITCH_DOWN",
          "filters":
            [
                { "type": "scale", "scale": 0.6 }
            ]
        },

        { "from": "Keyboard.TouchpadDown", "when": "Application.PhysicsEnabled", "to": "Actions.PITCH_DOWN" },
        { "from": "Keyboard.TouchpadUp", "when": "Application.PhysicsEnabled", "to": "Actions.PITCH_UP" },

        { "from": "Keyboard.MouseWheelUp", "when": "Application.PhysicsEnabled", "to": "Actions.LATERAL_RIGHT" },
        { "from": "Keyboard.MouseWheelDown", "when": "Application.PhysicsEnabled", "to": "Actions.LATERAL_LEFT" },
        { "from": "Keyboard.MouseWheelLeft", "when": "Application.PhysicsEnabled", "to": "Actions.BOOM_OUT", "filters": [ { "type": "scale", "scale": 0.02 } ]},
        { "from": "Keyboard.MouseWheelRight", "when": "Application.PhysicsEnabled", "to": "Actions.BOOM_IN", "filters": [ { "type": "scale", "scale": 0.02 } ]},

        { "from": "Keyboard.Space", "when": "Application.PhysicsEnabled", "to": "Actions.VERTICAL_UP" },
        { "from": "Keyboard.R", "when": "Application.PhysicsEnabled", "to": "Actions.ACTION1" },
        { "from": "Keyboard.T", "when": "Application.PhysicsEnabled", "to": "Actions.ACTION2" },
        { "from": "Keyboard.Tab", "when": "Application.PhysicsEnabled", "to": "Actions.ContextMenu" }
    ]
}
