	dh_auto_configure -- -DCMAKE_BUILD_TYPE=RelWithDebInfo -DDOWNLOAD_SERVERLESS_CONTENT=ON -DDISABLE_VCPKG=ON -DCMAKE_CXX_COMPILER="/usr/lib/llvm-7/bin/clang++" -DOpenGL_GL_PREFERENCE="GLVND"


